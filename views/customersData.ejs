<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/meta.ejs') %>
    <title>Home</title>
    <style>
      td img {
        max-width: 60px;
      }
      th,
      td,
      table {
        padding: 2px 10px;
        border-collapse: collapse;
        border: 4px solid black;
      }
      main {
        width: 900px;
      }
      a {
        text-decoration: none;
        color: red;
      }
    </style>
  </head>
  <body>
    <main>
      <div class="Head">
        <div class="logo" id="box1"><img src="/images/logo.png" alt="" /></div>
        <div class="Heading" id="box2"><h1>Electronic Shop</h1></div>
      </div>
      <div>
        <nav>
          <ul>
            <li>
              <a href="/customersData">Dashbord</a>
            </li>
            <li>
              <a href="/logout">logout</a>
            </li>
          </ul>
        </nav>
      </div>
      <h2>Dashbord</h2>
      <table>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Description</th>
          <th>Image</th>
          <th>View</th>
          <th>Delete</th>
          <th>Edit</th>
        </tr>
        <% for(var card of cards){ %>
        <tr>
          <td><%= card._id %></td>
          <td><%= card.scaryName %></td>
          <td><%= card.scaryEmail %></td>
          <td><%- card.scaryDescription %></td>
          <td><img src="uploads/<%= card.scaryImageName %>" alt="" /></td>
          <td><a href="/print/<%= card._id %>">View</a></td>
          <td><a href="/delete/<%= card._id %>">DELETE</a></td>
          <td><a href="/edit/<%= card._id %>">EDIT</a></td>
        </tr>
        <% } %>
      </table>
      <%- include('partials/footer.ejs') %>
    </main>
  </body>
</html>
